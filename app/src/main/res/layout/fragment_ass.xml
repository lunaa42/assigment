<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tventerAassFrag"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:hint="Enter Adjacent"
            android:inputType="number"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="96dp" />

        <TextView
            android:id="@+id/tventerBassFrag"
            android:layout_width="162dp"
            android:layout_height="28dp"
            android:hint="Enter Opposite"
            android:inputType="number"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="144dp" />

        <Button
            android:id="@+id/btnCalculateAssFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnClick"
            android:text="calculate"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="226dp" />

        <ImageView
            android:id="@+id/ivphotoAssFrag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCalculateAssFrag"
            tools:src="@tools:sample/avatars" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>